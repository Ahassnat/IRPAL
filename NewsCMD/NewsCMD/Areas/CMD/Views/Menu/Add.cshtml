@model NewsCMD.Models.Menu

@{
    ViewBag.Title = "اضافة قائمة جديدة";

    string ParentId = ViewBag.ParentId + "";

    if (ViewBag.MneuTitel != null)
    {
        ViewBag.Title =   ViewBag.Title + "  -  " + ViewBag.MneuTitel;
    }

}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ParentId",ParentId)
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*@Html.HiddenFor(model => model.Id)*@
        <div class="form-group">
            @Html.LabelFor(model => model.Title, "العنوان ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.URL, "عنوان الرابط", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Active, "فعال", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Active)
                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewWindow, "نافذة جديدة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.NewWindow)
                    @Html.ValidationMessageFor(model => model.NewWindow, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="اضافة" class="btn btn-primary" />
                @if (ViewBag.ParentId > 0)
                {
                    <a class=" btn btn-info" href="/CMD/Menu/Index/@ParentId"><i></i>الغاء </a>
                }
           
                @Html.ActionLink("الرجوع للقائمة الرئيسية  ", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
