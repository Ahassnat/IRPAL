
@{
    ViewBag.Title = "Upload File";
}

@* هاد الفورم لرفع الملفات الصغير لا تتجاوز الجيجا  *@
@*@using (Html.BeginForm())*@
@* بنستبدلو بها  *@
                     @* الننل الاولي للكنترولر والنلل الثانية للاكشن والمثيود وبعدها الكلاس اللي بنرفع من خلالو الملفات الكبيرة *@
@using(Html.BeginForm(null,null,FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="fle" class="control-label col-md-2">Upload Your File </label>
           
            <div class="col-md-10">
               <input type="file"  name="fle" id="fle"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

