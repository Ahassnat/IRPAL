                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           area-haspopup="true" aria-expanded="false">Ajax Examples<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/AjaxExample/LoadExample">Load Example</a></li>
                            <li><a href="/AjaxExample/PostExample">Post Example</a></li>
                            <li><a href="/AjaxExample/GetExample">Get Example</a></li>
                            <li><a href="/AjaxExample/AjaxExample">Ajax Example</a></li>
                        
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">


        <h1>@ViewBag.Title</h1>
        @*هيستدعي صفحة جزئية تحتوي علي كود لشغلة معينة بس بدل ما نكتب هان بنوخذ بس اسم الصفحة *@
        @Html.Partial("_msg")
        @* الصفحةة اللي طبقت ال Layout هتيجي محتوياتها هان *@
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Html.Partial("_deleteWithJS")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- هاد السكريبت لتشغيل المودل اللي فوق تاع ال
        Modal Dialog
        بنستخدم الكود اللي
        Html.Partial("_deleteWithJS")
        Partial View  ==> _deleteWithJS     -->
    <script>
        $(function () {
            //$("#Confirm").modal("show"); => هاد الفنكشن بس لاضهار صندوق الحوار بس
            $(document).on("click", ".Confirm", function () {  //=>متي ما كان الزر موجود اعمل الفنكشن التالية
                $("#Confirm").modal("show");
                $("#Confirm .btn-danger").attr("href", $(this).attr("href"));
                return false; //  => هيك انا وقف الزر اللي هبعتلو ال Confirm

            });
        })
    </script>

    @* لعدم اجبار صفحة الابن واللي هي الاندكس علي كتابة جافا سكريبت له مطلق الحرية  *@
    @* وتعتبر الرندر ك اعلان للابن اللي هوا الاندكس ومش مجبر انو يستخدمو لكن لوحطيتها ترو بدل فولص هيصير مجبر انه يستخدم السكربت داخل الاندكس  *@
    @RenderSection("scripts", required: false)
</body>
</html>
